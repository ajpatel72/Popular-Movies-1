<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ajpatel72.udacitypopularmovies1" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.UdacityPopularMovies" >
        <activity
            android:name=".activities.MoviesActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DetailsActivity"
            android:label="@string/title_activity_details"
            android:parentActivityName=".activities.MoviesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ajpatel72.udacitypopularmovies1.activities.MoviesActivity" />
        </activity>
    </application>

</manifest>
